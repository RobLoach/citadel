{
    "id": "redis_group",
    "ports": [
        {
            "proto": "tcp",
            "host": 6379,
            "container": 6379
        }
    ],
    "containers": [
         {
            "image": "crosbymichael/redis",
            "cpus": [0],
            "memory": 512,
            "type": "service"
         },
         {
            "image": "crosbymichael/redis",
            "cpus": [1],
            "memory": 512,
            "type": "service",
            "args": ["slaveof", "127.0.0.1", "6379", "--port", "6378"]
         }
    ]
}
